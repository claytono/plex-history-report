# EditorConfig helps maintain consistent coding styles
# See https://editorconfig.org/

# top-most EditorConfig file
root = true

# Universal settings for all files
[*]
# Set encoding to UTF-8
charset = utf-8
# Use LF (Unix-style) line endings
end_of_line = lf
# Ensure file ends with a newline
insert_final_newline = true
# Remove trailing whitespace on save
trim_trailing_whitespace = true
# Use spaces for indentation
indent_style = space
# Default indentation size
indent_size = 4

# Exclude Python files (handled by ruff)
[*.py]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
max_line_length = unset

# YAML, JSON, and similar formats often use 2-space indentation
[*.{yml,yaml,json}]
indent_size = 2

# Markdown files may use trailing whitespace for line breaks
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_size = 4

# Makefiles require tab indentation
[Makefile]
indent_style = tab

# Exclude LICENSE file from checks
[LICENSE]
indent_size = unset
indent_style = unset
end_of_line = unset
trim_trailing_whitespace = unset
insert_final_newline = unset

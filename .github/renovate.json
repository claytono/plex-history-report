{
  "extends": ["config:recommended"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^scripts/run-shfmt$/"],
      "matchStrings": [
        "SHFMT_VERSION=\"(?<currentValue>.*?)\"\\s+#\\s+Current latest version"
      ],
      "depNameTemplate": "mvdan/sh",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/^scripts/run-editorconfig-lint$/"],
      "matchStrings": [
        "EC_VERSION=\"(?<currentValue>.*?)\"\\s+#\\s+Current latest version"
      ],
      "depNameTemplate": "editorconfig-checker/editorconfig-checker",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    }
  ]
}
